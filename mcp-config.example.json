{
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/workspace",
        "/home/pixel-peeper"
      ],
      "description": "Access and manage NixOS dotfiles and home directory"
    },
    "git": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-git",
        "--repository",
        "/workspace"
      ],
      "description": "Git operations for dotfiles repository"
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "YOUR_BRAVE_API_KEY_HERE"
      },
      "description": "Search for NixOS documentation and packages"
    },
    "nixos-docs": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-fetch"
      ],
      "description": "Fetch NixOS and Home Manager documentation"
    },
    "obsidian": {
      "command": "npx",
      "args": [
        "-y",
        "@executeautomation/mcp-obsidian"
      ],
      "env": {
        "OBSIDIAN_VAULT_PATH": "/home/pixel-peeper/Documents/secend-brain"
      },
      "description": "Interact with Obsidian vault for notes and documentation"
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "ghp_YOUR_TOKEN_HERE"
      },
      "description": "GitHub integration for repository management"
    },
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-puppeteer"
      ],
      "description": "Browser automation for testing web applications"
    }
  },
  "_comments": {
    "setup": "Copy this file to mcp-config.json and fill in your API keys",
    "brave-search": "Get API key from https://brave.com/search/api/",
    "github": "Generate token at https://github.com/settings/tokens with 'repo' scope",
    "obsidian": "Update OBSIDIAN_VAULT_PATH to your actual vault location"
  }
}
